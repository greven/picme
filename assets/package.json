{
  "name": "picme",
  "version": "1.0.0",
  "description": "picme project",
  "main": "build.js",
  "author": "Nuno <mail@nuno.site> Freire",
  "license": "MIT",
  "scripts": {
    "start": "npm run watch",
    "deploy": "npm run build",
    "build": "npm run build:styles && npm run build:storybook && npm run build:scripts -- --deploy",
    "build:styles": "tailwindcss -i css/app.css --postcss postcss.config.js -o ../priv/static/assets/app.css",
    "build:storybook": "tailwindcss -i css/storybook.css -c tailwind-sb.config.js -o ../priv/static/assets/storybook.css",
    "build:scripts": "node build.mjs",
    "watch": "npm run build:styles -- --watch & npm run build:storybook -- --watch & npm run build:scripts -- --watch"
  },
  "dependencies": {
    "daisyui": "^2.50.2",
    "topbar": "^2.0.1",
    "phoenix": "file:../deps/phoenix",
    "phoenix_html": "file:../deps/phoenix_html",
    "phoenix_live_view": "file:../deps/phoenix_live_view"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "autoprefixer": "^10.4.13",
    "esbuild": "^0.17.10",
    "postcss-import": "^15.1.0",
    "tailwindcss": "^3.2.7"
  }
}
